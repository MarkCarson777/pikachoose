<div class="card-container">
    <h1>All Battle Messages</h1>
    <%= link_to "Request a new battle", new_message_path %>
    <% @messages.each do |message| %>
    <div class="pokemon-card">
      <%= link_to message_path(message) do %>
        <h2><%= message.title %></h2>
        <p><%= message.description %></p>
        <p><em>posted by <%= message.user.email %>, <%= time_ago_in_words(message.created_at) %> ago</em></p>
    </div>
      <% end %>
    <% end %>
</div>
