<div class="battle-container">

  <div class="button-container">  
    <%= link_to "Request a new battle", new_message_path, :class => "btn btn-battle" %>
  </div>

  <div class="message-container">
    <% @messages.each do |message| %>
      <div class="battle-card">
        <%= link_to message_path(message) do %>
          <h1><%= message.title %></h1>
          <h3><%= message.description %></h3>
          <div>
            <p><em><%= message.user.email %> <%= time_ago_in_words(message.created_at) %></em></p>
          </div>
        <% end %>
      </div>  
      <%= image_tag("pokeball.png", :class => "battle-pokeball") %>
    <% end %>
  </div>

</div>
