<div class="battle-container">
    <div class="battle-message">
        <h2><%= @message.title %></h2>
    </div>
    <div class="battle-user">
        <p><em>posted by <%= @message.user.email %>, <%= time_ago_in_words(@message.created_at) %> ago</em></p>    
    </div>
        <h3>Responses:</h3>
        <%= render @message.comments %>
        <%= render 'comments/form' %>
          <%= link_to "Strengthen Your Team!", pokemons_path, class: "btn btn-pokemon py-2 px-3 mt-2 mb-2 mr-sm-2"  %>
  <%= link_to "Cancel battle", message_path(@message), class: "btn btn-pokemon py-2 px-3 mt-2 mb-2 mr-sm-2" , method: :delete, data: { confirm: "Cancel this battle?" }  %>

</div>

