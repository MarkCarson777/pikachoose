<div class="show-message-container">
    <h2><%= @message.title %></h2>
    <p><em>posted by <%= @message.user.email %>, <%= time_ago_in_words(@message.created_at) %> ago</em></p>
    <p><%= @message.description %></p>
    <%= link_to "edit this message", edit_message_path(@message), :class => "message-links" %>
    <%= link_to "back to battles", messages_path, :class => "message-links" %>
    <%= link_to "cancel battle", message_path(@message), :class => "message-links", method: :delete, data: { confirm: "Remove this battle?" }  %>
    <h3>Responses:</h3>
    <%= render @message.comments %>
    <%= render 'comments/form' %>
</div>