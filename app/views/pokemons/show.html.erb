<div id="container">
  <div id="show-container">
    <div id="show-card">
      <div class="flex">
        <% if @pokemon.photo.attached? %>
          <%= cl_image_tag @pokemon.photo.key %>
        <% else %>
        <%= [image_tag("https://res.cloudinary.com/markcarson121/image/upload/v1621537842/snorlax_tayhnt.png"), image_tag("https://res.cloudinary.com/markcarson121/image/upload/v1621537841/bulbsaur_qz7jh4.png"), image_tag("https://res.cloudinary.com/markcarson121/image/upload/v1621537842/charizard_r9uub6.png"), image_tag("https://res.cloudinary.com/markcarson121/image/upload/v1621537840/pachi_zosvdq.png"), image_tag("https://res.cloudinary.com/markcarson121/image/upload/v1621537840/eevee_jmi0qq.png"), image_tag("https://res.cloudinary.com/markcarson121/image/upload/v1621538125/pikachu_qfugzj.png")].sample %>
        <% end %> 
        <div class="pokemon-details">
          <h1><%= @pokemon.name %></h1>
          <h2><%= @pokemon.category %></h2>
          <h2>£<%= @pokemon.price %></h2>
          <h2><%= @pokemon.address %></h2>
        </div>
        <div class="show-actions">
          <div>
            <%= image_tag("pokeball.png", :class => "pokeball") %>
            <%= link_to "Book This Pokémon", new_pokemon_booking_path(@pokemon), :class => "show-link" %>
          </div>
          <div>
            <%= image_tag("pokeball.png", :class => "pokeball") %>
            <%= link_to "Edit Details", edit_pokemon_path(@pokemon), :class => "show-link" %>
          </div>
          <div>
            <%= image_tag("pokeball.png", :class => "pokeball") %>
            <%= link_to "Remove #{@pokemon.name}", pokemon_path(@pokemon), method: :delete, data: { confirm: "Are you sure?" }, :class => "show-link" %>
          </div>
          <div>
            <%= image_tag("pokeball.png", :class => "pokeball") %>
            <%= link_to "See all Pokemon", pokemons_path, :class => "show-link"  %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="review-header">
    <h1>Reviews (<%= @pokemon.reviews.count %>)</h1>
  </div>

  <div id="review-container">
    <% @pokemon.reviews.each do |review| %>
      <div class="pokemon-review">
        <div class="list-group-item">
          <%= review.content %>
          <div class="rating">
            <% if review.rating < 2 %>
              <i class="fas fa-star"></i>
            <% elsif review.rating < 3 %>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
            <% elsif review.rating < 4 %>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
            <% elsif review.rating < 5 %>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
            <% elsif review.rating == 5 %>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
              <i class="fas fa-star"></i>
            <% end %>
          </div>     
        </div>
        <div>
          <%= image_tag("https://res.cloudinary.com/markcarson121/image/upload/v1621540616/misty_gt2mmm.png", :class => "avatar-large") %>
        </div>
      </div>
    <% end %>
  </div>

</div>
