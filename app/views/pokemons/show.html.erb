<div id="container">
<div id="show-container">
  <div id="show-card">
    <%= cl_image_tag @pokemon.photo.key if @pokemon.photo.attached? %>
    <div>
      <h2><%= @pokemon.name %></h2>
      <h2><%= @pokemon.category %></h2>
      <h2>Â£<%= @pokemon.price %></h2>
      <h2><%= @pokemon.address %></h2>
      <%= link_to "Check Availability", new_pokemon_booking_path(@pokemon), :class => "show-link" %>
      <%= link_to "Edit Details", edit_pokemon_path(@pokemon), :class => "show-link" %>
      <%= link_to "Remove #{@pokemon.name}", pokemon_path(@pokemon), method: :delete, data: { confirm: "Are you sure?" }, :class => "show-link" %>
      <%= link_to "Back", pokemons_path, :class => "show-link"  %>
    </div>
  </div>
</div>

<div id="review-container">
  <h1>Reviews (<%= Review.count %>)</h1>
  <ul class="list-group">
    <% @pokemon.reviews.each do |review| %>
      <div class="pokemon-review">
        <div>
          <li class="list-group-item"><%= review.content %></li>
        </div>
        <div>
          <img class="avatar-large" src="assets/ketchum.png" >
        </div>
      </div>
    <% end %>
  </ul>
</div>
</div>