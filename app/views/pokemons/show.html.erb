<div id="show-container">
<h2> <%= @pokemon.name %> </h2>
<h3> <%= @pokemon.category %> </h3>
<p> Â£<%= @pokemon.price %> </p>
<%= link_to "Book #{@pokemon.name}", new_pokemon_booking_path(@pokemon) %>
