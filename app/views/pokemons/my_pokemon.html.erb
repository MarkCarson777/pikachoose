<div class="container">
  <% @pokemons.each do |pokemon| %>
    <div class="pokemon-booking">
      <div class="front">
        <div class="front-contents">
          <%= cl_image_tag pokemon.photo.key if pokemon.photo.attached? %>
            <h2> <%= pokemon.name %> </h2>
        </div>
      </div>
      <%= link_to pokemon_path(pokemon) do %>
        <div class="back"> 
          <div class="back-contents">       
            <h3> <%= pokemon.category %> </h3>
            <h3> Â£<%= pokemon.price %> </h3>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
 